{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*" : [
        "src/app/*"
      ],
      "@env" : [
        "src/environments/"
      ],
      "@assets/*" : [
        "src/assets/*"
      ],
      "@page/*" : [
        "src/app/page/*"
      ],
      "@ui/*" : [
        "src/app/ui/*"
      ],
      "@common/*" : [
        "src/app/common/*"
      ],
      "@feature/*" : [
        "src/app/feature/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
